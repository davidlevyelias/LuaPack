{
	"name": "@davidlevyelias/luapack",
	"author": "David Levy Elias",
	"version": "1.1.1",
	"description": "A modern Lua packer tool.",
	"main": "build/index.js",
	"bin": {
		"luapack": "build/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build",
		"templates",
		"config.schema.json",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"test": "jest --config jest.config.cjs",
		"typecheck": "tsc --noEmit",
		"build": "tsc -p tsconfig.json",
		"pack:example": "npm run build && node build/index.js --verbose --config examples/demo/basic.luapack.config.json && lua dist/demo_basic_bundle.lua",
		"prepublishOnly": "npm run build && npm run typecheck && npm test"
	},
	"keywords": [
		"lua",
		"packer",
		"bundler",
		"obfuscator"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/davidlevyelias/LuaPack.git"
	},
	"homepage": "https://github.com/davidlevyelias/LuaPack#readme",
	"bugs": {
		"url": "https://github.com/davidlevyelias/LuaPack/issues"
	},
	"dependencies": {
		"ajv": "^8.17.1",
		"ansi-colors": "^4.1.3",
		"commander": "^14.0.2",
		"lua-format": "^1.5.3-c",
		"ts-node": "^10.9.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.15.5",
		"jest": "^29.7.0",
		"prettier": "^3.6.2",
		"ts-jest": "^29.3.4",
		"typescript": "^5.5.4"
	},
	"engines": {
		"node": ">=18"
	}
}
